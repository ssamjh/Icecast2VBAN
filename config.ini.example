[performance]
# FFmpeg pipe buffer size in bytes (default: 262144 = 256 KB, ~1.36 seconds buffering)
pipe_buffer_size = 262144

# Intermediate queue size in packets (default: 20 packets, ~107ms buffering)
# This acts as a dejitter buffer to smooth out network timing variations
queue_size = 20

# Initial buffer fill before starting playback (default: 10 packets, ~53ms)
# Higher values reduce stuttering risk but increase startup delay
# Set to 0 to start immediately (not recommended)
initial_buffer_fill = 10

# Socket timeout in seconds (default: 0.1 seconds)
socket_timeout = 0.1

# Initial retry delay in seconds after stream failure (default: 1 second)
retry_delay = 1

# Maximum retry delay in seconds (default: 60 seconds)
max_retry_delay = 60

[debug]
# Enable audio stuttering debug mode (default: false)
# When enabled, logs detailed timing metrics, buffer stats, and stream analysis
debug_audio = false

# Debug statistics report interval in seconds (default: 10)
debug_report_interval = 10